<description xmlns="http://openoffice.org/extensions/description/2006"
             xmlns:d="http://openoffice.org/extensions/description/2006"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <version value="${project.version}"/>

    <identifier value="net.codebuilders.openoffice-groovy"/>

    <platform value="all"/>

    <dependencies>
        <OpenOffice.org-minimal-version value="4.1" d:name="OpenOffice.org 4.1"/>
    </dependencies>

    <!-- update-information -->

    <registration>
        <simple-license accept-by="admin" suppress-on-update="false">
            <license-text xlink:href="registration/LICENSE" lang="en-US"/>
        </simple-license>
    </registration>

    <publisher>
        <name xlink:href="http://codebuilders.net" lang="en">Code Builders, LLC</name>
    </publisher>

    <!-- release-notes -->

    <display-name>
        <name lang="en">Groovy Macros for OpenOffice</name>
    </display-name>

    <icon>
        <default xlink:href="images/cblogo-42x42.png"/>
        <high-contrast xlink:href="images/cblogo-42x42.png"/>
    </icon>

    <extension-description>
        <src xlink:href="description/description_en.txt" lang="en"/>
    </extension-description>

</description>
